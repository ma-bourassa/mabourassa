---
const {
  title,
  img,
  desc,
  url,
  badge,
  pricing,
  oldPricing,
  checkoutUrl,
  details = true,
  custom_link = false,
  custom_link_label = '',
} = Astro.props;
---

<div class='bg-base-100 rounded-lg transition ease-in-out hover:scale-[102%] hover:shadow-xl'>
  <div class='hero-content flex-col md:flex-row'>
    <img src={img} alt={title} class='max-w-full rounded-lg md:max-w-[13rem]' />
    <div class='w-full grow p-5 md:p-0'>
      <h1 class='text-xl font-bold'>
        {title}
        {badge && <div class='badge badge-secondary mx-2'>{badge}</div>}
      </h1>
      <div>
        <span class='mr-1 text-xl'> {pricing}</span>
        <span class='text-md line-through opacity-50'>{oldPricing}</span>
      </div>
      <p class='text-1xl py-1'>{desc}</p>
      <div class='card-actions mt-3 flex md:mt-0 md:justify-end'>
        <a class='btn btn-primary grow md:grow-0' href={checkoutUrl} target='_blank'>Buy</a>
        {
          custom_link && (
            <a href={custom_link} target='_blank' class='btn btn-outline grow md:grow-0'>
              {custom_link_label}
            </a>
          )
        }
        {
          details && (
            <a href={url} class='btn btn-outline grow md:grow-0'>
              Details
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>

---
interface Props {
  title: string;
  subtitle: string;
  tags?: string;
}
const { title, subtitle, tags }: Props = Astro.props;
---

<div class='mt-4 mb-8'>
  <h3 class='mb-2 text-lg font-semibold'>{title}</h3>
  <span class='mb-4 text-sm font-light'>{subtitle}</span>
  <slot />
  {
    tags && (
      <div class='my-4 flex flex-wrap gap-2 '>
        {tags.split(',').map((tag) => (
          <div class='badge-ghost badge'>{tag}</div>
        ))}
      </div>
    )
  }
</div>

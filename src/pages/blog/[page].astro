---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPosts } from '../../lib/blogs.astro';

export async function getStaticPaths({ paginate }) {
  const posts = await getAllPosts();
  return paginate(posts, { pageSize: 1 });
}

interface Props {
  title: string;
  description: string;
  pubDate?: string;
  updatedDate?: string;
  heroImage?: string;
}

const { page } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage }: Props = page.data[0].frontmatter;
const { Content } = page.data[0];
---

<BaseLayout title={title} description={description} image={heroImage}>
  <div class='md:flex md:justify-center'>
    <article class='prose prose-lg prose-img:mx-auto max-w-[750px]'>
      {heroImage && <img src={heroImage} alt={title} class='mb-6 w-full' />}
      <h1 class='title my-2 text-4xl font-bold'>{title}</h1>
      {pubDate && <time>{pubDate}</time>}
      {
        updatedDate && (
          <div>
            Last updated on <time>{updatedDate}</time>
          </div>
        )
      }
      <div class='divider my-2'></div>
      <Content />
    </article>
  </div>

  <div class='flex justify-between'>
    {
      page.url.prev ? (
        <a href={page.url.prev} class='btn btn-ghost my-10 mx-5'>
          <svg
            class='h-6 w-6 fill-current md:h-8 md:w-8'
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            height='24'
            viewBox='0 0 24 24'
          >
            <path d='M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z' />
          </svg>
          Recent posts
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class='btn btn-ghost my-10 mx-5'>
          Previous Post
          <svg
            class='h-6 w-6 fill-current md:h-8 md:w-8'
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            height='24'
            viewBox='0 0 24 24'
          >
            <path d='M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z' />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>
